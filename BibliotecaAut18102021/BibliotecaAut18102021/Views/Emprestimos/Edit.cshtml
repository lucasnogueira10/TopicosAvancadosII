@model Teste.Models.Emprestimo

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Emprestimo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Livro" class="control-label"></label>
                <select asp-for="Livro" id="Livro" name="Livro" asp-items="@Model.Livros" class="form-control">
                    <option>@Model.Livro.Nome</option>
                </select>
                <span asp-validation-for="Livro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtEmprestimo" class="control-label"></label>
                <input asp-for="DtEmprestimo" class="form-control" />
                <span asp-validation-for="DtEmprestimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DtDevolucao" class="control-label"></label>
                <input asp-for="DtDevolucao" class="form-control" />
                <span asp-validation-for="DtDevolucao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cliente" class="control-label"></label>
                <select asp-for="Cliente" id="Cliente" name="Cliente" asp-items="@Model.Clientes" class="form-control">
                    <option>@Model.Cliente.Nome</option>
                </select>
                <span asp-validation-for="Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
