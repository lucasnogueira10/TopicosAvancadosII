@model CursoMVC.Models.Turma

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Turma</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="codTurma" class="control-label"></label>
                <input asp-for="codTurma" class="form-control" />
                <span asp-validation-for="codTurma" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Semestre" class="control-label"></label>
                <input asp-for="Semestre" class="form-control" />
                <span asp-validation-for="Semestre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ano" class="control-label"></label>
                <input asp-for="Ano" class="form-control" />
                <span asp-validation-for="Ano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <label asp-for="Aluno" class="control-label"></label>
                <select asp-for="Aluno" id="Aluno" name="Aluno" asp-items="@Model.Alunoes" class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Aluno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Professor" class="control-label"></label>
                <select asp-for="Professor" id="Professor" name="Professor" asp-items="@Model.Professors" class="form-control">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="Professor" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
